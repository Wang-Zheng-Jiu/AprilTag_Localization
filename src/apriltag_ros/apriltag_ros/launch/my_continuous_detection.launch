<launch>
    <arg name="launch_prefix" default="" />
    <!-- set to value="gdbserver localhost:10000" for remote debugging -->
    <arg name="node_namespace" default="apriltag_ros_continuous_node" />

    <!-- specify the topic of the camera. mine : mvBlueFOX-MLC200wc -->
    <arg name="camera_name" default="/mv_26806946" />
    <arg name="camera_frame" default="camera" />
    <arg name="image_topic" default="image_rect" />

    <!-- Set parameters -->
    <rosparam command="load" file="$(find apriltag_ros)/config/settings.yaml" ns="$(arg node_namespace)" />
    <rosparam command="load" file="$(find apriltag_ros)/config/tags.yaml" ns="$(arg node_namespace)" />

    <!-- run the camera -->
    <include file="$(find bluefox2)/launch/single_node.launch"/>

    <!-- calibrate the frame from /image_raw to /image_rect -->
    <node pkg="image_proc" type="image_proc" name="image_proc" ns="$(arg camera_name)"/>

    <!-- run apriltag_ros node -->
    <node pkg="apriltag_ros" type="apriltag_ros_continuous_node" name="$(arg node_namespace)" clear_params="true" output="screen" launch-prefix="$(arg launch_prefix)">
        <!-- Remap topics from those used in code to those on the ROS network -->
        <remap from="image_rect" to="$(arg camera_name)/$(arg image_topic)" />
        <remap from="camera_info" to="$(arg camera_name)/camera_info" />

        <param name="camera_frame" type="str" value="$(arg camera_frame)" />
        <param name="publish_tag_detections_image" type="bool" value="true" />
        <!-- default: false -->
    </node>

    <!-- Set static loaction of the camera-->
    <node pkg="tf" type="static_transform_publisher" name="baselink_cam" args="0 0 0 0 0 0 camera base_link 100" />

    <!-- launch RVIZ -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find apriltag_ros)/rviz/rviz.rviz"/>

</launch>  